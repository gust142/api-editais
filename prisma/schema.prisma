generator client {
  provider = "prisma-client-js"
}
datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  email    String @unique
  password String
  name String
}

model Edital {
  id Int @id @default(autoincrement())
  numero Int
  ano Int
  descricao String @db.VarChar(500)
  ong   Ong? @relation(fields: [ongId], references: [id])
  ongId Int?
  links Link[]
  recursos Recurso []
  aberto Boolean
}

model Ong {
  id Int @id @default(autoincrement())
  nome String
  email String
  token String
  editais Edital []
}

model Link {
  id Int @id @default(autoincrement())
  nome String @db.VarChar(200)
  url String @db.VarChar(200)
  edital   Edital? @relation(fields: [editalId], references: [id])
  editalId Int?
}

model Recurso{
  id Int @id @default(autoincrement())
  nome String
  email String
  cargo String
  assunto String
  edital Edital? @relation(fields: [editalId], references: [id])
  editalId Int?
}